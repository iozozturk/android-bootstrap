<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/social_item"
    android:weightSum="1"
    style="@style/ListItem">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="title"
            android:textColor="@color/abc_search_url_text_selected"
            android:id="@+id/social_item_title" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:measureWithLargestChild="true"
            android:gravity="right">

        <TextView
            android:layout_width="21dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:id="@+id/social_item_value"
            android:layout_marginLeft="40dp"
            android:layout_gravity="right"
            android:textAlignment="gravity" />
            </LinearLayout>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03">
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/social_item_toggle"
            android:checked="true"
            android:layout_gravity="center_vertical|left" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/social_item_seekbar"
            android:layout_weight="0.20"
            android:layout_gravity="center_vertical|right"
            android:max="100"
            android:indeterminate="false" />
    </TableRow>


</LinearLayout>